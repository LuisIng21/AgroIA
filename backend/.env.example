# Environment Configuration for FrijolAI

# Server Configuration
NODE_ENV=development
PORT=3001

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=frijolai_db
DB_USER=frijolai_user
DB_PASSWORD=frijolai_password

# Test Database Configuration
DB_TEST_HOST=localhost
DB_TEST_PORT=5432
DB_TEST_NAME=frijolai_test_db
DB_TEST_USER=frijolai_test
DB_TEST_PASSWORD=test_password

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_in_production
JWT_EXPIRES_IN=7d

# Frontend URL
FRONTEND_URL=http://localhost:3000

# AI Service Configuration
AI_SERVICE_URL=http://localhost:8000
AI_SERVICE_API_KEY=your_ai_service_api_key

# Weather API Configuration
WEATHER_API_KEY=your_weather_api_key
WEATHER_API_URL=https://api.openweathermap.org/data/2.5

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_PATH=./uploads

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Security
BCRYPT_ROUNDS=10
SESSION_SECRET=your_session_secret_key

# External Services
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Production specific (uncomment and configure for production)
# REDIS_URL=redis://localhost:6379
# SSL_CERT_PATH=/path/to/ssl/cert.pem
# SSL_KEY_PATH=/path/to/ssl/key.pem